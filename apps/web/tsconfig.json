{
  "extends": "@repo/typescript-config/nextjs.json",
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
  "compilerOptions": {
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next",
      },
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "module": "Node16",
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
